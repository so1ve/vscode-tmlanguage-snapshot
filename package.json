{
	"name": "vscode-tmlanguage-snapshot",
	"version": "0.1.3",
	"packageManager": "pnpm@8.15.6",
	"author": "Ray <i@mk1.io> (@so1ve)",
	"description": "Take snapshots of your tmLanguage grammar.",
	"keywords": [
		"grammar",
		"highlighting",
		"language",
		"snapshot",
		"snapshot",
		"snapshot-test",
		"snapshot-tester",
		"snapshot-testing",
		"snapshot-tests",
		"snapshots",
		"syntax",
		"test",
		"testing",
		"textmate",
		"tmLanguage",
		"unit",
		"vscode"
	],
	"homepage": "https://github.com/so1ve/vscode-tmlanguage-snapshot#readme",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/so1ve/vscode-tmlanguage-snapshot.git"
	},
	"bugs": {
		"url": "https://github.com/so1ve/vscode-tmlanguage-snapshot/issues"
	},
	"license": "MIT",
	"sideEffects": false,
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"require": "./dist/index.cjs",
			"import": "./dist/index.mjs"
		}
	},
	"main": "./dist/index.cjs",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"typesVersions": {
		"*": {
			"*": [
				"./dist/*",
				"./dist/index.d.ts"
			]
		}
	},
	"files": [
		"dist"
	],
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"build": "pkgroll",
		"lint": "eslint . && prettier . --check",
		"lint:fix": "eslint . --fix && prettier . --write",
		"prepublishOnly": "nr build",
		"release": "bumpp --commit --push --tag && pnpm publish",
		"start": "tsx src/index.ts",
		"test": "vitest",
		"typecheck": "tsc --noEmit",
		"watch": "pkgroll --watch"
	},
	"dependencies": {
		"vscode-oniguruma": "^2.0.1",
		"vscode-textmate": "^9.0.0"
	},
	"devDependencies": {
		"@antfu/ni": "^0.23.0",
		"@so1ve/eslint-config": "^2.0.0",
		"@so1ve/prettier-config": "^2.0.0",
		"@types/node": "^20.11.0",
		"bumpp": "^9.2.0",
		"eslint": "^8.57.0",
		"fast-glob": "^3.3.2",
		"pkgroll": "^2.0.1",
		"prettier": "^3.2.4",
		"tsx": "^3.13.0",
		"typescript": "^5.2.2",
		"vite": "^4.4.11",
		"vitest": "^0.34.6"
	}
}
